---
import Section from "../Section.astro"

import { certificates } from "@cv"
---

<Section title="Certificates">
    <ul>
        {
            certificates.map(
                ({ name, date, issuer }) => {

                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{name}</h3>
                                        <h4>{issuer}</h4>
                                    </div>
                                </header>
                                <footer>
                                    <p>{date}</p>
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    div h3 {
        font-weight: 500;
        color: #111;
    }

     div h4 {
        font-weight: 400;
        color: #222;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 4px;
    }
</style>
