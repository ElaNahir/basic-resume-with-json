---
import { basics } from "@cv"
import Section from '@/components/Section.astro'

import Globe from '@/icons/globe.svg'
import Mail from '@/icons/envelope.svg'
import Phone from '@/icons/telephone.svg'
import GitHub from '@/icons/github.svg'
import LinkedIn from '@/icons/linkedin.svg'
import Instagram from '@/icons/instagram.svg'
import Location from '@/icons/geo-alt.svg'

const { name, label, image, email, phone, url, location, profiles } = basics
const { city, region } = location

const SOCIAL_ICONS: Record<string, any> = {
GitHub,
LinkedIn,
Instagram,
}

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn")
const linkedUrl = linkedInfo?.url

const instaInfo = profiles.find(({ network }) => network === "Instagram")
const instaUrl = instaInfo?.url

/*const printInfo = [email, phone, linkedUrl, instaUrl].filter(Boolean).join("•")*/
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <Location />
                {city}, {region}
            </span>
            <footer>
                <div class="print">
                {url} &bull; {email} &bull; {phone}  {linkedUrl} &bull; {instaUrl}
                </div>

                {
                    url && (
                        <a 
                        href={url}
                        title={`Visit the ${name} web`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                            <Globe />
                        </a>
                    )
                }
                {
                    email && (
                        <a 
                        href={`mailto:${email}`}
                        title={`Enviar un correo electrónico a ${name} al correo ${email}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    phone && (
                        <a 
                        href={`tel:${phone}`}
                        title={`Llamar por teléfono a ${name} al número ${phone}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                            <Phone />
                        </a>
                    )
                }
                {
                    profiles.map (({ network, username, url}) => {
                        const Icon = SOCIAL_ICONS [network]

                        return (
                            <a 
                        href={url}
                        title={`Visitar el perfil de ${name} en ${network}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                            <Icon />
                        </a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;

    }
    
    h1 {
        font-size: 2.5rem;
    }

    h2 {
        color: #fff;
        font-weight: 500;
        font-size: 1.3rem;
        text-wrap: balance;

    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 180px;
        border-radius: 6px;
        margin-right: 20px;
    }

    span {
        color: #666;
        display: flex;
        align-items: center;
        gap: .5rem;
        font-size: .85rem;
        letter-spacing: -0.05rem;
    }

    footer {
        color: #888;
        font-size: 0.65rem;
        display: flex;
        gap: 4px;
        margin-top: 8px;
    }

    footer a {
        color: var(--color-bg);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all .3s ease;

    }

    footer a:hover {
        transform: rotate(360deg);
        background: var(--color-hl);
        border: 1px solid #ddd;
    }

    .print {
        display: none;
    }

    @media print {
		.print {
			display: block;
		}

        footer a {
            display: none;
        }
	}


</style>
