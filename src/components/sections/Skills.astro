---
import Section from "../Section.astro";

import { skills } from "@cv";
---

<Section title="Skills">
    <div>
        {
            skills.map(({ name }) => (

            <p>
                <span>{name}</span>
            </p>
            ))
        }
    </div>
</Section>

<style>
    div {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-top: .8rem;
    }

    p {
        border-radius: 6px;
        background: var(--color-hl);
        color: #000;
        font-size: .9rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
        transition: all .6s ease;

        &:hover {
        transform: scale(120%);
        }
    }
</style>
