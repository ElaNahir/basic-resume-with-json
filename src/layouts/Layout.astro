---
interface Props {
	title: string,
}

const {title} = Astro.props

---


<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>

	:root {
		--color-subtitle: #006172;
		--color-bg: #006172;
		--color-hl: #d1eeee;
	}

	html {
		/*margin: 0;
		width: 100%;
		height: 100%;*/
		font-family: Menlo, Monaco, Lucida Console, 'Courier New', Courier, monospace;
		letter-spacing: -0.025rem;
	}

	body, figure {
		margin: 20px;
		padding: 0;
	}

	main {
		margin-bottom: 60px;
	}

	a {
		text-decoration: none;
		color: #293280;
		transition: all .3s ease;

		&:hover {
			color: #888db9;
		}
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	*, *::after, *::before {
		box-sizing: border-box;
	}

	h1, h2, h3, h4 {
		font-family: Arial, Helvetica, sans-serif;
		margin: 0;
		
	}

	h1 {
		color: var(--color-subtitle);
	}

	h2 {
		background-color: var(--color-bg);
		padding: 2px 8px;
		border-radius: 6px;
		color: #fff;
	}

	h3 {
		color: var(--color-subtitle);
		font-size: 1.5rem;
		font-weight: 700;
	}


	p {
		color: #666;
		font-family: Arial, Helvetica, sans-serif;
		font-size: 1rem;
		line-height: 1.7;
		margin: 0;
		text-wrap: pretty;
	}

	ul {
		font-family: Arial, Helvetica, sans-serif;
	}

	
</style>
